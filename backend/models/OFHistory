const mongoose = require('mongoose');

const OFHistorySchema = new mongoose.Schema({
  userEmail: { type: String, required: true },
  itemId:    { type: mongoose.Schema.Types.ObjectId, ref: 'ClothingItem' },
  wornDate:  { type: Date, default: Date.now }
});


module.exports = mongoose.models.OFHistory || mongoose.model('OFHistory', OFHistorySchema);
